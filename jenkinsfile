pipeline {
    agent {node {label 'agent1'}}
    stages {
        stage('Build') {
            steps {
                echo 'building...'
            }
        }
        stage('Test') {
            steps {
                echo 'testing...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'deploying...'
            }
        }
    }

    post {
        always {
            echo 'I will always run wheather the job is successful or not'
        }
        success{
            echo 'I will always run only when the job is successful'
        }.
        failure{
            echo 'I will run when failed'
        }
    }
}